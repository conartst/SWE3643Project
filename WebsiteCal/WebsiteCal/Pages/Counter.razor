            Input2 = "";
            AnswerString = "";
            Symbol = "";
            Error = "Invalid Input, Numbers Only";
            IsTextBoxRed = true;

        }
        else
        {
            Answer = Calculator3.Program.Add(double.Parse(myNumber), double.Parse(myNumber2));
            Symbol = "+";
            AnswerString = Answer.ToString();
            Input1 = myNumber;
            Input2 = myNumber2 + " =";
            Error = "";
