</div>

<div class="button-column">
    <button class="btn btn-primary" @onclick="Multiplying">Multiply</button>
    <button class="btn btn-primary" @onclick="CosAing">Cos A</button>
</div>

<div class="button-column">
    <button class="btn btn-primary" @onclick="Dividing">Divide</button>
    <button class="btn btn-primary" @onclick="TanAing">Tan A</button>
</div>

<div class="button-column">
    <button class="btn btn-primary" @onclick="Equals">Equal</button>
    <button class="btn btn-primary" @onclick="ReciprocalAing">Reciprocal A</button>
</div>

